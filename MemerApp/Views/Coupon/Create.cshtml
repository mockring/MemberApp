@model MemberApp.Dtos.CouponDto

@{
    ViewData["Title"] = "新增折扣項目";
    var calculationList = ViewData["CalculationMethodList"] as IEnumerable<SelectListItem>;
}

<h1>新增折扣項目</h1>

<h4>折扣項目</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CouponName" class="control-label"></label>
                <input asp-for="CouponName" class="form-control" />
                <span asp-validation-for="CouponName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalculationMethod" class="control-label"></label>
                <select asp-for="CalculationMethod"
                        asp-items="calculationList"
                        class="form-control"></select>
                <span asp-validation-for="CalculationMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CouponValue" class="control-label"></label>
                <input asp-for="CouponValue" class="form-control" />
                <span asp-validation-for="CouponValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remark" class="control-label"></label>
                <input asp-for="Remark" class="form-control" />
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回到折扣列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
